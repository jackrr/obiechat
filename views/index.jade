extends layout

include mixins/topicHelpers

block content
	#topicHolder
		.topic
			.topicHeaderContainer
			.topicMain
				div(class='posts infiniteScroll')
				div.postFormArea

	#topicBrowser
		a(href='/topic/new', class='newTopicLink') Create a topic
		.topicPreviewContainer
			div(class="topicPreviewHolder infiniteScroll")
				mixin topicPreviews(topics)
		.tab
			span(class='symbol open') -
			span(class='label') Topic Browser