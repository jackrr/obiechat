doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(data-main='/scripts/main.js', src='/components/requirejs/require.js')
	body
		.header
			a(href='/', class='logo') Yeo(r) Voice
			- if (user && user.name)
				div(class='userArea headerRight')
					.userName
						span.label Posting as:
						span.name
							a(href='/user/#{user._id}' class='userProfileLink')= user.displayName
					a(href='/signOut', class='signOut btn') Sign Out
			- else
				div(class='buttons headerRight')
					.join
						a(href='/join', class='join btn') Join Now
					.signIn
						a(href='/auth/google', class='signIn btn') Sign In
			#usersOnline
		.main
			block content
		#notifications
			.general
			.errors
			.topic
		#warnRing
		#cover