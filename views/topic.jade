extends layout

include mixins/postHelpers
include mixins/topicHelpers

block content
	#topicHolder
		.topic
			.topicHeaderContainer
				mixin topicHeader(topic)
			.topicMain
				div(class='posts infiniteScroll')
					mixin postPageView(postPage)
				div.postFormArea
					mixin postForm(topic.slug)

	#topicBrowser
		.previewsAndCreateRegion
			a(href='/topic/new', class='newTopicLink') New Topic
			.topicPreviewContainer
				div(class="topicPreviewHolder infiniteScroll")
					mixin topicPreviews(topics)
		div(class='tab', id='topicListToggle')
			span(class='symbol open') -
			span(class='label') Topic Browser